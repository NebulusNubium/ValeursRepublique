<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    
        {# <link rel="stylesheet" href="{{ asset('styles/style.css') }}"> #}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <nav>
                <div class="logo">
                    <a href="{{ path('app_home') }}">
                        <img src="{{ asset('img/logo.png') }}" alt="Logo République">
                    </a>
                </div>
                <ul class="navbar-main" id="navLinks">
                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a href="{{ path('glossaire') }}">Glossaire</a></li>
                    {% if app.user %}
                        <li><a href="{{ path('app_jeu') }}">Jouer</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('admin') }}">Admin</a></li>
                        {% endif %}
                        <li class="logout-item">
                            <form action="{{ path('app_logout') }}" method="post">
                                <button class="deco" type="submit">✖️ Déconnexion</button>
                            </form>
                        </li>
                    {% else %}
                        <li><a href="{{ path('app_register') }}">Inscription</a></li>
                        <li><a href="{{ path('app_login') }}">Connexion</a></li>
                    {% endif %}
                </ul>
            <div class="menu">
                <button id="burger" class="menu" aria-label="Ouvrir le menu">
                    <img src="{{ asset('img/menu.svg') }}" alt="menu">
                </button>
            </div>

            </nav>

        {% endblock %}

        {% block main %}{% endblock %}
        {% block footer %}
            <footer class="bg-gray-900 text-gray-300 py-8">
                <div class="container mx-auto px-4 text-center">
                    <p class="mb-4">&copy; 2025 OieDeLaRepublique. Tous droits réservés.</p>
                    <div class="flex justify-center space-x-6">
                    <a href="{{ path('app_apropos') }}" class="hover:text-white">À propos</a>
                    <a href="{{ path('app_mention') }}" class="hover:text-white">Mentions légales</a>
                    <a href="{{ path('app_confidentialite') }}" class="hover:text-white">Confidentialité</a>
                    </div>
                    <div class="mt-4">
                    <a href="https://facebook.com" target="_blank" class="mx-2 hover:text-white">Facebook</a>
                    <a href="https://twitter.com" target="_blank" class="mx-2 hover:text-white">Twitter</a>
                    <a href="https://instagram.com" target="_blank" class="mx-2 hover:text-white">Instagram</a>
                    </div>
                </div>
            </footer>
        {% endblock %} 
    </body>

</html>
